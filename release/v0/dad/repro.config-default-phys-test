#!/bin/sh -l

## machine settings
export machine=theia    # theia, WCOSS_C, etc.

## experiment settings
# user configuration
export ACCT_DISK=global         # storage account name
export ACCT_SCRATCH=scratch1    # scratch space
export ACCT_SLURM=nems          # compute account name 'fv3-cpu' 'nems'
export QUEUE=batch              # batch, debug, etc.
export WALLCLOCK=00:30:00       # wall clock time
# configuration
export LEVS=64         # 64? 150? 128? 65?
export PSLOT=control_master_physics  # user-defined experiment name
export CASE=C96         # cubed-sphere resolution, C96 currently only tested
export CDATE=2017011906 # initial condition datetime
export FHMAX=240        # length of free forecast (hours)
export FHMAX=24         # length of free forecast (hours)
export FHOUT=1         # forecast output frequency (hours)
# user configurable directories (dir.config)
export IC_DIR=/$ACCT_SCRATCH/NCEPDEV/$ACCT_DISK/$USER/ICS/fv3/${CDATE} # forecast initial conditions (fv3, nemsio w/ NSST)
export BASEDIR=`pwd`/../../..                                                       # model directory
export BASE_GSM=/scratch1/NCEPDEV/swpc/Adam.Kubaryk/fv3                        # base folder for fix fields
# computational settings (compute.config)
export MODE=64bit       # dycore precision:   32bit, 64bit
export TYPE=nh          # hydrostatic option: nh, hydro
export COMP=prod                   # compiling mode:     debug, repro, prod
#export COMP=multi_gases            # compiling mode:     debug, repro, prod
#export COMP=multi_gases_test       # compiling mode:     debug, repro, prod
export HYPT=on          # hyperthreading:     on, off
export mpiexec=`which mpirun`
# post processing (stitch 6-tile grids into global netcdf, remap.config)
export REMAP=YES        # YES or NO

# namelist options can go below
export DELTIM=225
#export adiabatic=.true.
#export dycore_only=.true.
#export do_sat_adj=.false.
# export print_esmf=.true.

# henry's settings for L150
export use_exact_qs=.true.
#### artificial diffusion
 export nord=1
 export d4_bg=0.20
 export VTDM4=0.04
 export DO_VORT_DAMP=.true.
 export D_CON=1.
#### Sponge layer and Rayleigigh damping
#### negative tau is for GSM type of Rayleigh 
 export tau=0.022
 export rf_cutoff=2.e2
 export n_sponge=-1
 export d2_bg_k1=0.20
 export d2_bg_k2=0.005
 export fv_sg_adj=1800

# export levr=90
#export CHGRES_ONLY=YES
 export IDVT=21
 export NTRAC=3
 export ncnst=$NTRAC

