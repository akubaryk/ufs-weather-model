#!/bin/sh

case $CASE in
  C48)  export DELTIM=${DELTIM:-1800}; export layout_x=${layout_x:-4} ; export layout_y=${layout_y:-6} ;
        export NODES=${NODES:-12}; export master_grid=2deg;   export REMAP_TASKS=${REMAP_TASKS:-24}    ;
        export LONB=192; export LATB=96   ;;
  C96)  export DELTIM=${DELTIM:-1800}; export layout_x=${layout_x:-6} ; export layout_y=${layout_y:-8} ;
        export NODES=${NODES:-24}; export master_grid=1deg;   export REMAP_TASKS=${REMAP_TASKS:-48}    ;
        export LONB=384; export LATB=192  ;;
  C384) export DELTIM=${DELTIM:-450} ; export layout_x=${layout_x:-12}; export layout_y=${layout_y:-16};
        export NODES=${NODES:-96}; export master_grid=0p5deg; export REMAP_TASKS=${REMAP_TASKS:-96}    ;
        export LONB=1536; export LATB=768 ;;
  C768) export DELTIM=${DELTIM:-225} ; export layout_x=${layout_x:-16}; export layout_y=${layout_y:-24};
        export NODES=${NODES:-192};export master_grid=0p25deg;export REMAP_TASKS=${REMAP_TASKS:-384}   ;
        export LONB=3072; export LATB=1536;;
  *)    echo "grid $CASE not supported, exit"
        exit ;;
esac

if [ $LEVS = 150 ] ; then
  export IDVT=${IDVT:-200}
  export NTRAC=${NTRAC:-5}
else
  export IDVT=${IDVT:-21}
  export NTRAC=${NTRAC:-3}
fi
